{# src/G5/ProjetBundle/Resources/views/Projet/showJob.html.twig #}
 {% extends '::base.html.twig' %}
{#% block stylesheets %}
    {{ parent() }}
<link href="{{ asset('/css/contact.css') }}" type="text/css" rel="stylesheet" />
{% endblock %#}
 {% block body %}
<div class="row">
    <h3 class="titre">
            {{ job.titre | raw}}
            <a class="pull-right alert-success" href="{{ path('g5_job_show_job_pdf', {"id": job.id,"titre": job.titre|replace({" ":"-",".":""}),'_format': '.pdf'}) }}">
                <span class="glyphicon glyphicon-download-alt"></span><span class="glyphicon glyphicon-print orange"></span>
            </a>
        </h3>
    </div>
<hr/>
    <div class="row">
        <div class="col-lg-6 job">

            <h4>
                Présentation de la boite
            </h4>
            <p>
                {{ job.presentation | raw}}
                </p>
                <h4>
                    Mission
                </h4>
                <p>
                {{ job.mission | raw}}
                    </p>

                    <h4>
                        Profil
                    </h4>
                    <p>
                    {{ job.profil | raw}}
                        </p>
                        <div>
                            <table class="table table-striped table-hover table-condensed">
                                <tr>
                                    <th>Debut</th>
                                    <td>{{ job.debut | raw}}</td>
                                </tr>
                                <tr>
                                    <th>Contrat</th>
                                    <td>{{ job.contrat | raw}}</td>
                                </tr>
                                <tr>
                                    <th>Localisation</th>
                                    <td>{{ job.region | raw}}{{job.pays| raw}}</td>
                                </tr>
                                <tr>
                                    <th>Remuneration</th>
                                    <td>{{ job.remuneration | raw}}</td>
                                </tr>
                                <tr>
                                    <th>Secteur</th>
                                    <td>{{ job.secteur | raw}}</td>
                                </tr>
                                <tr>
                                    <th>Contact</th>
                                    <td>{{ job.contact | raw}}</td>
                                </tr>
                                <tr>
                                    <th>Adresse</th>
                                    <td>{{ job.adresse | raw}}</td>
                                </tr>


                            </table>
                            <h4>
                                Autres précisions
                            </h4>
                            <p>
                                {{ job.autres | raw}}
                                </p>
                            </div>

                        </div>
                        <div class="col-lg-6">
                            <h3 class="">Liste des postulats</h3>

                            {%for postulat in job.postulats%}
                            <div class="panel-group" id="accordion">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        
                                        <a class="" data-toggle="collapse" data-parent="#accordion" href="#collapse{{postulat.id}}">
                                            <h2 class="panel-title titre">                            
                                                  {{postulat.auteur.firstname}} {{postulat.auteur.lastname}}
                                                </h2>
                                            </a>
                                        </div>
                                        <div id="collapse{{postulat.id}}" class="panel-collapse collapse">
                                            <div class="panel-body">
                                                <a class="list-group-item" href="tel:{{postulat.tel}}">
                                                    Tél: {{postulat.tel}}
                                                </a>
                                                <a class="list-group-item" href="email:{{postulat.auteur.email}}">
                                                    Email: {{postulat.auteur.email}}
                                                </a>
                                                <a class="list-group-item" href="#">
                                                    Disponibilité: {{postulat.disponibilite}}
                                                </a>
                                                <a class="list-group-item" href="{{ asset(postulat.getWebPathCv()) }}">
                                                    CV
                                                </a>

                                                <a class="list-group-item" href="{{ asset(postulat.getWebPathLm()) }}">
                                                    Lettre de motivation
                                                </a>                                                </div>
                                        </div>
                                    </div>
                                </div>
                                 {%else%}
                                Il ya pas encore de posulats
                            {%endfor%}
                            </div>

                        </div>


 {% endblock %}

