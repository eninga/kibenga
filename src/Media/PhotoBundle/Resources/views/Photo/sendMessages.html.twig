 {% extends '::base.html.twig' %}
{% block body %}
<div class="row">
    <div class="col-lg-offset-1 col-lg-9">
        <h2 class="affiche" style="text-align: center">
            Messages
        </h2>
    </div>
</div>
<div class="row">
    <div class="col-lg-offset-1 col-lg-3">
        <div class="affiche">
         {% if is_granted('ROLE_USER') %} 
                <ul class="list-group">
                    <li class="list-group-item">
                        <a class="" href="{{ path('media_photo_send_messages') }}">
                            <span class="glyphicon glyphicon-edit"></span> 
                            Envoyer un message
                        </a>
                    </li>
                    
                    <li class="list-group-item">

                        <a class="" href="{{ path('media_photo_messages') }}">
                            <span class="glyphicon glyphicon-envelope"></span> 
                            Messages reçus
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a class="" href="{{ path('media_photo_messageSent') }}">
                            <span class="glyphicon glyphicon-send"></span> 
                            Messages envoyés
                        </a>
                    </li>
                </ul>

         {% endif %}
            </div>
        </div>
        <div class="col-lg-6">
            <h3 class="affiche">Edition d'un message</h3>

            <div role="form" class="well">
                <form class="form-group" method="post" {{ form_enctype(form) }}>
                     {{ form_widget(form) }}
                        <input type="submit" formnovalidate="true" class="btn btn-primary" />
                    </form>
                </div>
            </div>


        </div>
 {% endblock %}